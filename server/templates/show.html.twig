{% extends 'layout.html.twig' %}

{% block title %} Article - {{ article.title }} {% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('list') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}  
    {{ encore_entry_script_tags('list') }}
{% endblock %}

{% block body %}
    {{ parent() }}  

    <div class="mb-3">
        <a href="{{ path('articles_index') }}" class="text-decoration-none" title="Articles">
            ‚Üê Back to Articles
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <h1 class="card-title mb-3">{{ article.title }}</h1>

            <!-- Meta info -->
            <div class="mb-3 text-muted">
                <span>Category: <strong>{{ article.category.name }}</strong></span> |
                <span>Created: {{ article.createdAt|date('Y-m-d H:i') }}</span>
                {% if article.updatedAt %}
                    | <span>Updated: {{ article.updatedAt|date('Y-m-d H:i') }}</span>
                {% endif %}
            </div>

            <!-- Content -->
            <p class="card-text">{{ article.content|raw }}</p>
        </div>

        <!-- Footer actions -->
        <div class="card-footer d-flex justify-content-between align-items-center">
            <div class="form-check form-switch me-3">
                <input 
                    class="form-check-input deletedItems" 
                    type="checkbox" 
                    id="deletedSwitch-{{ article.id }}" 
                    data-id="{{ article.id }}" 
                    name="deletedSwitch-{{ article.id }}"
                    {{ article.deleted ? 'checked' }}
                >
                <label class="form-check-label" for="deletedSwitch-{{ article.id }}">Deleted</label>
            </div>

            <a href="{{ path('articles_edit', {'id': article.id}) }}" class="btn btn-outline-primary btn-sm">
                Edit
            </a>
        </div>

    </div>

</div>

{% endblock %}    