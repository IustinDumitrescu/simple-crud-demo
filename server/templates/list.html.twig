{% extends 'layout.html.twig' %}

{% block title %} Articles {% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('list') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}  
    {{ encore_entry_script_tags('list') }}
{% endblock %}

{% block body %}
    {{ parent() }}   
       <div class="d-flex justify-content-between align-items-center mb-3">
            <h1 class="h3">Articles</h1>
            <a href="{{ path('articles_new') }}" class="btn btn-success">+ Add Article</a>
        </div>

       <div class="mb-4 d-flex gap-2 align-items-start">
            <!-- Search Form -->
            <form class="flex-grow-1" method="get" action="{{ path('articles_index') }}">
                <div class="input-group">
                    <input 
                        type="text" 
                        class="form-control" 
                        placeholder="Search articles..." 
                        name="q" 
                        value="{{ app.request.query.get('q') }}"
                    >
                    <button class="btn btn-outline-primary" type="submit">Search</button>
                </div>
            </form>

            {% if categories is defined and categories is not empty %}
                <!-- Category Filter Form -->
                <div class="flex-grow-3">
                    <select 
                        name="category" 
                        class="form-select" 
                        id="category_filter"
                    >
                        <option value="">All Categories</option>
                        {% for category in categories %}
                            <option value="{{ category.id }}" {% if categoryId == category.id %}selected{% endif %}>
                                {{ category.name }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
            {% endif %}
        </div>

        <!-- Articles Listing -->
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            {% for article in articles %}
                <div class="col">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">{{ article.title }}</h5>
                            <p class="card-text text-truncate">{{ article.content|html_entity_decode|slice(0, 120) }}...</p>
                            <span class="badge bg-secondary">{{ article.category.name }}</span>
                        </div>
                        <div class="card-footer d-flex justify-content-between align-items-center">
                            <small class="text-muted">{{ article.createdAt|date('Y-m-d') }}</small>
                           <div class="d-flex align-items-center gap-2">
                                 <!-- Deleted Switch -->
                                <div class="form-check form-switch">
                                    <input 
                                        class="form-check-input deletedItems" 
                                        type="checkbox" 
                                        id="deletedSwitch-{{ article.id }}" 
                                        data-id="{{ article.id }}" 
                                        name="deletedSwitch-{{ article.id }}"
                                        {{ article.deleted ? 'checked'}}
                                    >
                                    <label class="form-check-label" for="deletedSwitch-{{ article.id }}">Deleted</label>
                                </div>

                                <!-- Action Buttons -->
                                <a href="{{ path('articles_show', {'id': article.id, 'slug': article.slug })}}" class="btn btn-sm btn-primary" title="Article - {{ article.title }}">View</a>
                                <a href="{{ path('articles_edit', {'id': article.id }) }}" class="btn btn-sm btn-outline-primary" title="Edit Article - {{ article.title }}">Edit</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <p>No articles found.</p>
            {% endfor %}
        </div>

        <div class="mt-4">
            {{ knp_pagination_render(articles) }}
        </div> 
{% endblock %}